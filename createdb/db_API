#!/usr/bin/env python3

import pymysql

"""
def genebank():

    Information on genes, proteins, accession number, amino acid sequence, dna sequence
    Output: dictionary of Accession, gene_id, location, dna_seq, aa_seq FROM Gene

"""
    cursorObject        = connectionObject.cursor() 
    sqlquery= 'SELECT Accession, gene_id, location, dna_seq, aa_seq'
    cursorObject.execute(sqlQuery)
    rows                = cursorObject.fetchall()

    for row in rows:
    yield(row)

    connection.close()



def get_proteinid():
    
    """gets gene information from database
       return: Accession, gene_id, location, dna_seq, aa_seq, protein_id
    """
    
   cursorObject        = connectionObject.cursor() 
    sqlquery= 'SELECT Accession, gene_id, location, dna_seq, aa_seq'
    cursorObject.execute(sqlQuery)
    rows                = cursorObject.fetchall()

    for row in rows:
    yield(row)

    connection.close()
    
    
def get_accessionno():
    
    """gets gene information through accession number
       input:accession number
       return: Accession, gene_id, location, dna_seq, aa_seq, protein_id
    """
    
   cursorObject        = connectionObject.cursor() 
    sqlquery= 'SELECT Accession, gene_id, location, dna_seq, aa_seq'
    cursorObject.execute(sqlQuery)
    rows                = cursorObject.fetchall()

    for row in rows:
    yield(row)

    connection.close()
    
    
 def get_proteinaccessionno():
    
